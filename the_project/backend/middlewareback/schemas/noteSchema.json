{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "note",
    "type": "object",
    "properties": {
    "content": {
    "type": "string",
    "minLength": 1,
    "maxLength": 500
    },
    "date": {
    "type": "string",
    "pattern": "\\b[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}.[0-9]{3}Z\\b"
    },
    "important": {
        "type": "boolean"
    },
    "user_id": {
        "type": "integer"
    }
    },
    "required": [
    "content",
    "date",
    "important"
    ]
    }